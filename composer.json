{
    "name": "francotaaber/forminator-field-widths",
    "description": "Add visual field width controls to Forminator forms. Easily customize field widths without writing CSS code.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Franco Taaber",
            "email": "info@francotaaber.com",
            "homepage": "https://francotaaber.com"
        }
    ],
    "homepage": "https://github.com/FrancoTaaber/forminator-field-widths",
    "support": {
        "issues": "https://github.com/FrancoTaaber/forminator-field-widths/issues",
        "source": "https://github.com/FrancoTaaber/forminator-field-widths"
    },
    "keywords": [
        "wordpress",
        "forminator",
        "form",
        "field",
        "width",
        "responsive"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Forminator_Field_Widths\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forminator_Field_Widths\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=phpcs.xml .",
        "phpcbf": "phpcbf --standard=phpcs.xml .",
        "lint": "find . -name '*.php' -not -path './vendor/*' | xargs -n1 php -l",
        "build": "./build.sh",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "phpcs": "Run PHP CodeSniffer checks",
        "phpcbf": "Auto-fix PHP CodeSniffer issues",
        "lint": "Run PHP syntax check on all files",
        "build": "Build distribution ZIP file"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "archive": {
        "exclude": [
            "/.github",
            "/.gitignore",
            "/tests",
            "/phpunit.xml",
            "/phpcs.xml",
            "/composer.lock",
            "/.env",
            "/.env.example"
        ]
    }
}
